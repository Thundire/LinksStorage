<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LinksStorage.Controls.IconButton"
             x:Name="This">
    <Border BindingContext="{Binding Source={x:Reference This}}" Shadow="{StaticResource ItemShadow}" StrokeShape="RoundRectangle 10">
        <Frame Padding="4">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Command}" CommandParameter="{Binding CommandParameter}"/>
            </Frame.GestureRecognizers>
            <Image VerticalOptions="Center" Aspect="Center" Source="{Binding Glyph}"/>
        </Frame>
    </Border>
</ContentView>