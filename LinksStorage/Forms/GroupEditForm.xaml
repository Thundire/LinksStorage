<?xml version="1.0" encoding="utf-8"?>

<views:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:forms="clr-namespace:LinksStorage.Forms"
             x:Class="LinksStorage.Forms.GroupEditForm"
             x:DataType="forms:GroupEditForm"
             Size="240,100">
    <VerticalStackLayout>
        <Label Text="Group Name"/>
        <Entry x:Name="GroupNameEntry"/>
        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Text="Ok" Clicked="Ok"/>
            <Button Grid.Column="1" Text="Cancel" Clicked="Cancel"/>
        </Grid>
    </VerticalStackLayout>
</views:Popup>