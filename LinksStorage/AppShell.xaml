<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LinksStorage.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LinksStorage"
    xmlns:pages="clr-namespace:LinksStorage.Pages"
    xmlns:viewModels="clr-namespace:LinksStorage.ViewModels"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="{x:Static Member=viewModels:NavigationRoutes.Root}" />

</Shell>
