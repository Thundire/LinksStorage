<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:LinksStorage.ViewModels"
             x:Class="LinksStorage.Pages.MainPage"
             x:DataType="viewModels:RootVM">

    <Grid RowDefinitions="Auto, *, 60">
        <!-- Hot Links -->
        <ListView ItemsSource="{Binding HotLinks}" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding .}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!-- Groups List -->
        <ListView Grid.Row="1" ItemsSource="{Binding Groups}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding .}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!-- Group Add Form -->
        <Grid Grid.Row="2" ColumnDefinitions="*, Auto, Auto">
            <Entry Placeholder="Group Name"/>
            <Button Grid.Column="1" Text="Add"/>
            <Button Grid.Column="2" Text="Cancel"/>
        </Grid>
    </Grid>

</ContentPage>
