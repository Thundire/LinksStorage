<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:LinksStorage.ViewModels"
             xmlns:controls="clr-namespace:LinksStorage.Controls"
             x:Class="LinksStorage.Pages.GroupPage"
             x:DataType="viewModels:GroupVM">
    <Grid RowDefinitions="*, 60" Padding="20">
        <ScrollView>
            <VerticalStackLayout>
                <!-- Groups List -->
                <CollectionView ItemsSource="{Binding Groups}" ItemSizingStrategy="MeasureFirstItem">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:GroupInfo">
                            <controls:LinksGroup Group="{Binding .}"
                                                 OpenCommand="{Binding Source={RelativeSource AncestorType={x:Type viewModels:GroupVM}}, Path=OpenGroupCommand}"
                                                 ChangeNameCommand="{Binding Source={RelativeSource AncestorType={x:Type viewModels:GroupVM}}, Path=ChangeGroupNameCommand}"
                                                 RemoveCommand="{Binding Source={RelativeSource AncestorType={x:Type viewModels:GroupVM}}, Path=RemoveGroupCommand}"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Links List -->
                <CollectionView ItemsSource="{Binding Links}" Margin="0,10,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:LinkInfo">
                            <Frame BackgroundColor="Black" Padding="6">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:GroupVM}}, Path=EditLinkCommand}"
                                                          CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>

                                <Grid ColumnDefinitions="22, *, 40, 40" ColumnSpacing="8"
                                      HeightRequest="40">
                                    <Image VerticalOptions="Center" Aspect="Center">
                                        <Image.Source>
                                            <FontImageSource Glyph="&#xf0c1;" FontFamily="FAFreeSolid" Size="20" Color="Orange"/>
                                        </Image.Source>
                                    </Image>

                                    <Label Grid.Column="1" Text="{Binding Name}" LineBreakMode="TailTruncation" VerticalOptions="Center" TextColor="White"/>

                                    <Button Grid.Column="2" Text="edit" Style="{StaticResource IconBtnFreeSolid}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:GroupVM}}, Path=EditLinkCommand}"
                                            CommandParameter="{Binding .}"/>
                                    <Button Grid.Column="3" Text="remove" Style="{StaticResource IconBtnFreeSolid}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:GroupVM}}, Path=RemoveLinkCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <HorizontalStackLayout Grid.Row="1">
            <Button Text="Add Group" Command="{Binding AddGroupCommand}"/>
            <Button Text="Add Link" Command="{Binding AddLinkCommand}"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>