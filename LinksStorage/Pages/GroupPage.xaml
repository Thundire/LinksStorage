<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:LinksStorage.ViewModels"
             x:Class="LinksStorage.Pages.GroupPage"
             x:DataType="viewModels:GroupVM">
    <Grid RowDefinitions="*, 60">
        <ScrollView>
            <VerticalStackLayout>
                <CollectionView ItemsSource="{Binding Groups}"></CollectionView>
                <CollectionView ItemsSource="{Binding Links}"></CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <HorizontalStackLayout Grid.Row="1">
            <Button Text="Add Group" Command="{Binding AddGroupCommand}"/>
            <Button Text="Add Link"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>