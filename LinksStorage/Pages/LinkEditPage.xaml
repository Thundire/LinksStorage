<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:LinksStorage.ViewModels"
             x:Class="LinksStorage.Pages.LinkEditPage"
             x:DataType="viewModels:LinkEditVM">
    <Grid RowDefinitions="*, Auto" Padding="20">
        <VerticalStackLayout>
            <Label Text="Name"/>
            <Entry Text="{Binding Name}" HeightRequest="50" Margin="0,6,0,10"/>
            <Label Text="Url"/>
            <Entry Text="{Binding Url}" HeightRequest="50" Margin="0,6,0,0"/>
        <Button Grid.Row="1" Margin="0,10,0,0" Text="Save" Command="{Binding SaveCommand}"/>
        </VerticalStackLayout>

    </Grid>
</ContentPage>