<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:LinksStorage.ViewModels"
             x:Class="LinksStorage.Pages.LinkEditPage"
             x:DataType="viewModels:LinkEditVM">
    <Grid RowDefinitions="*, Auto" Padding="20">
        <VerticalStackLayout>
            <Label Text="Alias"/>
            <Entry Text="{Binding Name}"/>
            <Label Text="Url"/>
            <Entry Text="{Binding Url}"/>
        </VerticalStackLayout>

        <Button Grid.Row="1" Text="Save" Command="{Binding SaveCommand}"/>
    </Grid>
</ContentPage>